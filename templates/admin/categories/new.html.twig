{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_categorie_new' %}

{% block main %}
    <h1>{{ 'title.categorie_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}


        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_categorie'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new_categorie', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_categorie_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list_categorie'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    
{% endblock %}
